_al jql 'jq -C  | less -R'

_al cpr 'cp -r'

_ual g grep ripgrep rg
_al gs "g v '^$'" 'g v ^$'
_al gcs "g Cv '^$'" 'g Cv ^$'

_print pipes

#########################
########## AWK ##########
#########################

_flush

_al a "$(_wi awk) "
_ual a awk
_al af 'a -F'
_al aw "'{print \$2}'"

for ((i = 0; i <= 30; i++)); do
        _al "aa$i" "'{print \$$i}'"
        _al "a$i" "a aa$i"
done

_al al "a '{print length, \$1}'"
_al all 'a aal'
_al aal "'{print length}'"
_al aanf "'{print \$NF}'"
_al anf 'a aanf'
_al aarev "'{print \$2, \$1}'"
_al arev "a aarev"
