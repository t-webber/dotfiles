_gt rt "$BUILD/good/runtime"
_gt dw "$HOME/Downloads"

_ual st cours
_gt st "$STUDY"

_gt blob "$BLOB"
_gt sav "$BLOB/save"

_gtd() {
        _gt "$1" "$DEV/$2"
}

_gtd dev
