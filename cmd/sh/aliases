_al kk 'k && k'
_al kkk 'k && k && k'
_al kkkk 'k && k && k && k'
_al kkkkk 'k && k && k && k && k'

_al src 'p src'

_gt() {
        _al "$1" "l && p $2 && v"
}

_ual 'ocf or xcf' cf
_gt ap "$APPS"
_gt ocf "$OCFG"
_gt xcf "$XDG_CONFIG_HOME"
_gt cmd "$CMD"
_gt data "$DATA"
_gt log "$LOGS"
