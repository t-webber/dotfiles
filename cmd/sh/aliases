_al pwt 's /sys/class/power_supply/BAT1/status'
_al pws 'sd cpupower frequency-set -g powersave'
_al pwp 'sd cpupower frequency-set -g performance'
_al pww 's /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor'

