_kal X Xorg
_kal hf w bspwm
_kal g gotop
_kal a adb
_kal p paru

_al bt btop

_al bare 'tonet; toau; tosql; to systemd-timesyncd systemd-journald systemd-journald.socket systemd-journald-dev-log.socket polkit; kr; kv; kd; kp; kc; kD; ku; ko; kg; ka; ke'

_al bgd 'bg && disown'
_al psg pgrep

_print kk kill

########## TMUX ##########

_flush

x=$(_wi tmux)

_x() {
        _al "x$1" -p "$x" "$2"
}

_x x
_x a 'a -t'
_x l ls
_x n 'new-session -s'
_x k 'kill-session -t'

_al x0 'xe 0'
_al x1 'xe 1'
_al x2 'xe 2'

_print xxx tmux

