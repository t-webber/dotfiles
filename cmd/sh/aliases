_al bgd 'bg && disown'
_al psg pgrep

_al kbg 'pkill -u "$USER" -x bash -P 1'

_print kk kill

########## TMUX ##########

_flush

x=$(_wi tmux)

_x() {
        _al "x$1" -p "$x" "$2"
}

_x x
_x a 'a -t'
_x l ls
_x n 'new-session -s'
_x k 'kill-session -t'

_al x0 'xe 0'
_al x1 'xe 1'
_al x2 'xe 2'
_al xs "xa \$(xl | fzf | w -F':' ww1)"

_print xxx tmux

