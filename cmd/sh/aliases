        _al "ww$i" "'{print \$$i}'"
        _al "w$i" "w ww$i"
done

_al wl "w '{print length, \$1}'"
_al wll "w wwl"
_al wwl "'{print length}'"
_al wwnf "'{print \$NF}'"
_al wnf "w wwnf"
_al wwrev "'{print \$2, \$1}'"
_al wrev "w wwrev"
_al wwdup "'{print \$0, \$0}'"
_al wdup "w wwdup"

_print www wk

