_ctl_def() {
        if [ -z "$3" ]; then
                local c=ty
                local j=tje
        else
                local c=tyyu
                local j=tjjue
        fi
        if [ -z "$2" ]; then
                arg=""
        else
                arg=" $2"
        fi

        [ -n "$1" ] && local end=!

        _al "ta$1" "$c start$arg" "$end"
        _al "ts$1" "$c restart$arg" "$end"
        _al "tt$1" "$c status$arg" "$end"
        _al "to$1" "$c stop$arg" "$end"
        _al "te$1" "$c enable$arg" "$end"
        _al "td$1" "$c disable$arg" "$end"

        [ -n "$1" ] && _al "tj$1" "$j$arg" "$end"
}

_ctl_def

_sep

